@model EF_CodeFirst.ViewModels.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Register</h2>

@using(Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Username)
            @Html.TextBoxFor(temp => temp.Username, new { @class = "form-control", placeholder = "Username" })
            @Html.ValidationMessageFor(temp => temp.Username)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(temp => temp.Email)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.ConfirmPassword)
            @Html.PasswordFor(temp => temp.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
            @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.PhoneNumber)
            @Html.TextBoxFor(temp => temp.PhoneNumber, new { @class = "form-control", placeholder = "PhoneNumber" })
            @Html.ValidationMessageFor(temp => temp.PhoneNumber)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.DateOfBirth)
            @Html.TextBoxFor(temp => temp.DateOfBirth, new { @class = "form-control", placeholder = "Date Of Birth" , type="date"})
            @Html.ValidationMessageFor(temp => temp.DateOfBirth)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Address)
            @Html.TextBoxFor(temp => temp.Address, new { @class = "form-control", placeholder = "Address" })
            @Html.ValidationMessageFor(temp => temp.Address)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.City)
            @Html.TextBoxFor(temp => temp.City, new { @class = "form-control", placeholder = "City" })
            @Html.ValidationMessageFor(temp => temp.City)
        </div>
    </div>
        <button class="btn btn-success col-1 mt-2" type="submit" >Register</button>
}
