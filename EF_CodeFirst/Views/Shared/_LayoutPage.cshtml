<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .field-validation-error{
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-success navbar-dark col-12">
        <a class="navbar-brand" href="#" style="padding-left: 30px">Company</a>
        <button class="navbar-toggler" data-bs-toggle ="collapse" data-bs-target="#nav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="nav">
            @*<div class="col-8">*@
            <div class="navbar-nav col-8" >
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/Index">Sản phẩm</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/MyProfile">Thông tin cá nhân</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">Đăng xuất</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Đăng nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        @*@if (User.Identity.IsAuthenticated)
            {
                <h3>Hello @User.Identity.Name</h3>
            }*@
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
