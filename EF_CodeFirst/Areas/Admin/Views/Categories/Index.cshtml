@model List<EF_CodeFirst.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Categories</h2>
<table class="table table-hover">
    <tr>
        <th>Category ID</th>
        <th>Category Name</th>
    </tr>
    @{
        foreach (EF_CodeFirst.Models.Category item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
            </tr>
        }
    }
</table>
