@model MVCPJ_BaiTapTrenLop.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container my-5 p-3">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Đăng nhập</h4>
                </div>
                <div class="card-body p-5">

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <input name="ID" type="hidden" value="1"/>
                        <input name="RoleID" type="hidden" value="1"/>
                        <input name="Email" type="hidden" value="example@gmail.com"/>
                        <div class="mb-3">
                            @Html.LabelFor(model => model.Username)
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(model => model.Password)
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password"} })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <p class="text-danger">@ViewBag.Alert</p>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-dark">Đăng nhập</button>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <p class="text-center mb-0">Bạn chưa có tài khoản? <a href="/register">Yêu cầu cấp tài khoản</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

