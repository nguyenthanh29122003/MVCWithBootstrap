@model MVCPJ_BaiTapTrenLop.Models.WorkingSchedule

@{
    ViewBag.Title = "Chi tiết lịch công tác";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2 class="text-center mb-4">Chi tiết lịch công tác</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.ScheduleID</td>
    </tr>
    <tr>
        <th>Tiêu đề</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Nội dung</th>
        <td>@Html.Raw(Model.Content)</td>
    </tr>
    <tr>
        <th>Ngày tạo</th>
        <td>@Model.CreatedDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Địa điểm</th>
        <td>@Model.Location</td>
    </tr>
    <tr>
        <th>Người tham gia</th>
        <td>@Model.Participants</td>
    </tr>
    <tr>
        <th>Ghi chú</th>
        <td>@Model.Note</td>
    </tr>
</table>

@Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
