@model MVCPJ_BaiTapTrenLop.Models.WorkingSchedule

@{
    ViewBag.Title = "Xóa lịch công tác";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2 class="text-center mb-4">Xóa lịch công tác</h2>

<div class="alert alert-danger">
    <strong>Bạn có chắc chắn muốn xóa lịch công tác này?</strong>
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.ScheduleID</td>
    </tr>
    <tr>
        <th>Tiêu đề</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Nội dung</th>
        <td>@Html.Raw(Model.Content)</td>
    </tr>
    <tr>
        <th>Ngày tạo</th>
        <td>@Model.CreatedDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Địa điểm</th>
        <td>@Model.Location</td>
    </tr>
    <tr>
        <th>Người tham gia</th>
        <td>@Model.Participants</td>
    </tr>
    <tr>
        <th>Ghi chú</th>
        <td>@Model.Note</td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Xóa" class="btn btn-danger" />
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
}


