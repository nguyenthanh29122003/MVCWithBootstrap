    <script>
        $(document).ready(function () {
            // Smooth scrolling for navbar links
            $("a").on('click', function (event) {
                if (this.hash !== "") {
                    event.preventDefault();

                    let hash = this.hash;
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 800, function () {
                        window.location.hash = hash;
                    });
                }
            });
        });
    </script>
</body>
</html>
