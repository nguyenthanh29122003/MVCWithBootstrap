                                    <li><a href="/Admin/Teacher/Index" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Danh sách</a></li>
                                    <li><a href="/Admin/Teacher/Create" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Thêm mới</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="mb-1">
                            <a class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed fs-5" data-bs-toggle="collapse" data-bs-target="#advertisement-collapse" aria-expanded="false">
                                Quảng cáo
                            </a>
                            <div class="collapse ms-3" id="advertisement-collapse" style="">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small fs-6">
                                    <li><a href="/Admin/Advertisement/Index" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Danh sách</a></li>
                                    <li><a href="/Admin/Advertisement/Create" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Thêm mới</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>

                    <ul class="list-unstyled ps-0 border-top">
                        <li class="mb-1">
                            <a class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed fs-5" data-bs-toggle="collapse" data-bs-target="#account-collapse" aria-expanded="false">
                                Người dùng
                            </a>
                            <div class="collapse ms-3" id="account-collapse" style="">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small fs-6">
                                    <li><a href="/Admin/User/Index" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Danh sách</a></li>
                                    <li><a href="/Admin/User/Create" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Thêm mới</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>

                <!-- Admin Sidebar -->
                <!-- Your Admin Sidebar content here -->
            </div>
            <div class="col-lg-10 mt-2">
                <!-- Breadcrumbs -->
                @if (ViewBag.Breadcrumbs != null && ViewBag.Breadcrumbs.Count > 0)
                {
                    <ol class="breadcrumb p-3 bg-body-secondary rounded-3">
                        @foreach (var item in ViewBag.Breadcrumbs)
                        {
                            <li class="breadcrumb-item ">
                                @if (!string.IsNullOrEmpty(item.Url))
                                {
                                    <a class="link-body-emphasis fw-semibold text-decoration-none" href="@item.Url">@item.Text</a>
                                }
                                else
                                {
                                    @item.Text
                                }
                            </li>
                        }
                    </ol>
                }

                <!-- Main Content -->
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="py-5 mt-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5">
                <div class="col mb-4">
                    <a href="/" class="d-flex align-items-center mb-3 text-decoration-none">
