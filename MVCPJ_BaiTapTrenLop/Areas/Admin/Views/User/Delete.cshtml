@model MVCPJ_BaiTapTrenLop.Models.User

@{
    ViewBag.Title = "Xóa người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2 class="text-center mb-4">Xóa người dùng</h2>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden field for UserID -->
            @Html.HiddenFor(model => model.ID)

            <div class="alert alert-danger">
                <strong>Bạn có chắc chắn muốn xóa người dùng này?</strong>
            </div>

            <div class="form-group">
                <label>Tên người dùng:</label>
                @Html.DisplayFor(model => model.FullName)
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </form>
    </div>
</div>
