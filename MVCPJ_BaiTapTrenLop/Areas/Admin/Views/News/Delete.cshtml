@model MVCPJ_BaiTapTrenLop.Models.News

@{
    ViewBag.Title = "Xóa tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Xóa tin tức</h2>

<h3>Bạn có chắc chắn muốn xóa tin tức này không?</h3>
<div>
    <h4>Chi tiết tin tức</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tiêu đề:</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>
        <dt>Nội dung:</dt>
        <dd>@Html.Raw(Model.Content)</dd>
        <dt>Ngày xuất bản:</dt>
        <dd>@Html.DisplayFor(model => model.PublishDate)</dd>
        <dt>Danh mục:</dt>
        <dd>@Html.DisplayFor(model => model.CategoryName)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "News", new {area = "Admin"}, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input name="id" type="submit" value="Xóa" class="btn btn-danger" />
                <a href="/Admin/News/Index" class="btn btn-secondary mx-3">Quay lại</a>
            </div>
        </div>
    }
</div> 
