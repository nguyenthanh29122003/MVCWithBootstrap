@model MVCPJ_BaiTapTrenLop.Models.LegalDocument

@{
    ViewBag.Title = "Xóa văn bản pháp lý";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Xóa văn bản pháp lý</h2>

<div class="row">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>Số hiệu:</dt>
            <dd>@Html.DisplayFor(model => model.SerialNumber)</dd>
            <dt>Tiêu đề:</dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>
            <dt>Nội dung:</dt>
            <dd>@Html.Raw(Model.Content)</dd>
        </dl>
    </div>
</div>

<p>Bạn có chắc chắn muốn xóa văn bản pháp lý này?</p>

@using (Html.BeginForm("Delete", "LegalDocument", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.DocumentID) <!-- Input hidden cho DocumentID -->

    <div class="form-group">
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default" })
    </div>
}
