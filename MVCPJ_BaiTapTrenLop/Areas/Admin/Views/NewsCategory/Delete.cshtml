@model MVCPJ_BaiTapTrenLop.Models.NewsCategory

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2 class="mt-4">Xóa nhóm tin</h2>

<h3>Bạn có chắc chắn sẽ xóa nhóm tin này?</h3>
<div>
    <h4>Nhóm tin</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "NewsCategory", FormMethod.Post)) {
